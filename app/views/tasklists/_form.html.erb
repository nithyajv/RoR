<%= form_with(model: tasklist) do |form| %>
  <% if tasklist.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(tasklist.errors.count, "error") %> prohibited this tasklist from being saved:</h2>

      <ul>
        <% tasklist.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :Taskname, style: "display: block" %>
    <%= form.text_field :Taskname %>
  </div>

  <div>
    <% value={} %>
<% User.all.each {|x| value[x.id] = x.firstname}%>
    <%= form.label :user, style: "display: block" %>
    <%= form.select :user_id, value.sort.map {|k,v| [v,k]} %>
  </div>

  <div>
    <%= form.label :Status, style: "display: block" %>
    <%= form.check_box :Status %>
  </div>

  <div>
    <%= form.label :Duedate, style: "display: block" %>
    <%= form.date_field :Duedate %>
  </div>

  <div>
    <%= form.label :Details, style: "display: block" %>
    <%= form.text_area :Details %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
