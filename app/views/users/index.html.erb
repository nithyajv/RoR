
<h1>Users</h1>
<%= link_to "Download PDF", users_path(format: 'pdf') %>
<%= link_to "Download CSV", users_path(format: 'csv') %>



<table class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>DOB</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
<div id="users">
  <% @users.each do |user| %>
      <tr>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.dob %></td>
        <td><%= link_to t('action.show_user'), user %></td>
      </tr>
   
  <% end %>
</div>
</tbody>
</table>
